<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loandefaultapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoanDefaultApplication">

        <!-- Splash Screen sebagai launcher utama -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Halaman utama -->
        <activity android:name=".HomeActivity" />

        <!-- Halaman Simulasi -->
        <activity android:name=".SimulasiActivity" />

        <!-- Halaman lainnya -->
        <activity android:name=".DatasetActivity" />
        <activity android:name=".TentangActivity" />
        <activity android:name=".ModelActivity" />
        <activity android:name=".FiturActivity" />

    </application>

</manifest>
